#! /bin/sh
### BEGIN INIT INFO
# Provides:          swift-container-sync
# Required-Start:    $remote_fs
# Required-Stop:     $remote_fs
# Default-Start:     2 3 4 5
# Default-Stop:      0 1 6
# Short-Description: Swift container sync
# Description:       Container sync server for Swift.
### END INIT INFO

PROJECT_NAME=swift
NAME="${PROJECT_NAME}-container-sync"
DESC="OpenStack Swift container sync"
if [ -e /etc/${PROJECT_NAME}/account-server.conf ] ; then
	DAEMON_ARGS=/etc/${PROJECT_NAME}/container-server.conf
else
	DAEMON_ARGS=/etc/${PROJECT_NAME}/container-server
fi
NO_OPENSTACK_CONFIG_FILE_DAEMON_ARG=yes
USE_LOGFILE=no
NO_OPENSTACK_LOGFILE_DAEMON_ARG=yes
